<UserControl x:Class="CampionatF1.RaceResultDriver"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CampionatF1"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.4*"/>
            <ColumnDefinition Width="0.4*"/>
            <ColumnDefinition Width="0.2*"/>
        </Grid.ColumnDefinitions>

        <Label x:Name="lbl_driverName" HorizontalAlignment="Center" VerticalAlignment="Center" Height="20" Foreground="WhiteSmoke" Grid.Column="0"/>
        <Label x:Name="lbl_constructorName"  HorizontalAlignment="Center" VerticalAlignment="Center" Height="20" Foreground="WhiteSmoke" Grid.Column="1"/>
        <ComboBox x:Name="lbl_points" HorizontalAlignment="Center" VerticalAlignment="Center" Height="20" Foreground="WhiteSmoke" Grid.Column="2" Width="30"/>
    </Grid>
</UserControl>
