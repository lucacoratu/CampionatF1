<Window x:Class="CampionatF1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CampionatF1"
        mc:Ignorable="d"
        Title="Campionatul Bajetilor" Height="800" Width="1000" Background="Gray" ResizeMode="NoResize" Icon="f1.png">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.15*"/>
            <ColumnDefinition Width="0.85*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Button x:Name="btn_viewPoints" Height="20" Content="View Points" Click="btn_viewPoints_Click"/>
            <Button x:Name="btn_viewConstructorPoints" Height="20" Content="View Constructor Points" Click="btn_viewConstructorPoints_Click"/>
            <Button x:Name="btn_addRaceResult" Height="20" Content="Race Result" Click="btn_addRaceResult_Click"/>
        </StackPanel>
        <Grid x:Name="grid_view" Grid.Column="1">
            <Image Source = "..\\..\\..\\Resources\\f1.jfif"/>
        </Grid>
        </Grid>
</Window>
