<UserControl x:Class="CampionatF1.ConstructorPoints"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CampionatF1"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="Transparent">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.9*"/>
        </Grid.RowDefinitions>

        <Label Content="Constructor" HorizontalAlignment="Center" Grid.Column="0" Grid.Row="0" Foreground="WhiteSmoke"/>
        <Label Content="Points" HorizontalAlignment="Center" Grid.Column="1" Grid.Row="0" Foreground="WhiteSmoke"/>

        <StackPanel x:Name="stckpanel_constructors" Grid.Row="1" Grid.Column="0">
            
        </StackPanel>

        <StackPanel x:Name="stckpanel_points" Grid.Row="1" Grid.Column="1">
           
        </StackPanel>
    </Grid>
</UserControl>
